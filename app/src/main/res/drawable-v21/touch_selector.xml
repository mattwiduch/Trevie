<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- State when an item is being pressed, but hasn't yet been activated (finger down) -->
    <item android:state_pressed="true">
        <ripple android:color="@color/colorPrimaryDark" />
    </item>

    <!-- When the view is "activated".  In SINGLE_CHOICE_MODE, it flags the active item
         of a GridView -->
    <item android:state_activated="true"
          android:drawable="@color/colorPrimary" />

    <!-- Default, "just hangin' out" state. -->
    <item android:drawable="@drawable/poster_shadow" />
</selector>